<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".completareFisaActivity"
    android:gravity="center_horizontal"
    android:background="@drawable/background6"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo" />

    <Spinner
        android:id="@+id/spinner_age"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="130dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginLeft="30dp"
        android:hint="@string/age" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"

        android:text="Age: ">

    </EditText>


    <Spinner
        android:id="@+id/spinner_sex"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:hint="@string/sex" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:text="Sex: ">

    </EditText>
    <Spinner
        android:id="@+id/spinner_height"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="230dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:hint="@string/height" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:text="Height: ">

    </EditText>

    <Spinner
        android:id="@+id/spinner_weight"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="280dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:hint="@string/weight" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:text="Wehight: ">

    </EditText>

    <Spinner
        android:id="@+id/spinner_blood"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="330dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:hint="@string/blood" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:text="Blood: ">

    </EditText>

    <Spinner
        android:id="@+id/spinner_geneticDiseases"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="380dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:hint="@string/geneticdiseases" />
    <EditText
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:text="Genetic diseases: ">

    </EditText>


    <Spinner
        android:id="@+id/spinner_allergens"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="430dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:hint="aller gens" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:text="Allergens: ">

    </EditText>

    <Button
        android:id="@+id/button_save"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="500dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/save"/>
</FrameLayout>