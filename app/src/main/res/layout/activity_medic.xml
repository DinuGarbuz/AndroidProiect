<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MedicActivity"

    >

<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"

android:layout_height="260dp">

<ImageView
    android:id="@+id/imageView5"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:srcCompat="@drawable/background2" />

<ImageView
    android:id="@+id/imageView6"
    android:layout_width="162dp"
    android:layout_height="162dp"
    android:layout_marginBottom="36dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="parent"
    app:srcCompat="@drawable/medic" />

<TextView
    android:id="@+id/edittext_medicName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:text="Bun venit!"
    android:textSize="24dp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/imageView6"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

<Button
android:id="@+id/button_pacienti"
android:layout_width="170dp"
android:layout_height="50dp"
android:layout_marginTop="280dp"
android:background="@drawable/buttcolor2"
android:layout_gravity="center_horizontal"
android:text="Pacienti"
android:layout_weight="1"
    />


<Button
android:id="@+id/button_medicInfo"
android:layout_width="170dp"
android:layout_height="50dp"
android:layout_marginTop="350dp"
android:layout_weight="1"
android:layout_gravity="center_horizontal"
android:background="@drawable/buttcolor2"
android:text="Informatie" />

<Button
android:id="@+id/button_setariCont"
android:layout_gravity="center_horizontal"
android:layout_weight="1"
android:layout_width="170dp"
android:layout_height="50dp"
android:layout_marginTop="420dp"
android:background="@drawable/buttcolor2"
android:text="Setari cont" />

<Button
android:id="@+id/button_logout"
android:layout_width="170dp"
android:layout_height="50dp"
android:layout_marginTop="490dp"
android:layout_weight="1"
android:layout_gravity="center_horizontal"
android:background="@drawable/buttcolor2"

android:text="Log Out" />

</FrameLayout>